
echo "change root's password"
sudo passwd

echo "config VI as main editor"
sudo update-alternatives --config editor

echo "set nocompatible" >> $HOME/.vimrc


echo "install build essential for enviroment"

sudo apt-get install -f build-essential
sudo apt-get install -f linux-headers-`uname -r`
sudo apt-get install -f libncurses5-dev
sudo apt-get install -f m4
sudo apt-get install -f libssl-dev
sudo apt-get install -f zlib1g zlib1g-dev
sudo apt-get install -f automake
sudo apt-get install -f libtool
sudo apt-get install -f libxslt1.1 libxslt1-dev libxml2-dev
sudo apt-get install -f ncurses termcap bison flex
sudo apt-get install -f libfreetype6-dev  libjpeg62-dev liblcms1-dev
sudo apt-get install -f unzip

sudo ln -s /usr/lib/x86_64-linux-gnu/libfreetype.so /usr/lib/
sudo ln -s /usr/lib/x86_64-linux-gnu/libz.so /usr/lib/
sudo ln -s /usr/lib/x86_64-linux-gnu/libjpeg.so /usr/lib/

sudo cp bbexec.sh /usr/local/bin
